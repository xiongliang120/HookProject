<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:id="@+id/staticProxy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="静态代理"/>

        <Button
            android:id="@+id/dynamicProxy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="动态代理"/>


        <Button
            android:id="@+id/hookActivityManagerNative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="对 ActivityManagerNativeHook"/>

        <Button
            android:id="@+id/hookPackageManager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="对 PackageManager Hook"/>

        <Button
            android:id="@+id/mInstrumentationHook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="对 StartActivty的 mInstrumentaion变量进行Hook"/>

        <Button
            android:id="@+id/mHCallBackHook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="对 ActivityThread的mH 进行callback"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>